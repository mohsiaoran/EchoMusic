<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hot_ly"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/chosen_img_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/social_attention_shape_corner" />

    <TextView
        android:id="@+id/chosen_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Piano Concerto"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/chosen_img_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="—"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/chosen_title_tv"
        app:layout_constraintStart_toEndOf="@+id/chosen_title_tv"
        app:layout_constraintTop_toTopOf="@+id/chosen_title_tv" />

    <TextView
        android:id="@+id/chosen_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/gang"
        app:layout_constraintStart_toEndOf="@+id/gang"
        app:layout_constraintTop_toTopOf="@+id/gang" />

    <TextView
        android:id="@+id/chosen_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="C大调第三钢琴协奏曲"
        android:textColor="#050505"
        app:layout_constraintStart_toStartOf="@+id/chosen_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/chosen_title_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>