<?xml version="1.0" encoding="utf-8"?>
<!--这是注册页面-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <ImageView
        android:id="@+id/register_user_img"
        android:layout_width="99dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/register_psd_confirm"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="432dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/please_enter_password"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_psd_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="364dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/please_enter_password"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_username_text"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="292dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/please_enter_username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username"
        android:layout_width="52dp"
        android:layout_height="33dp"
        android:gravity="center|center_vertical"
        android:text="@string/username"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/register_username_text"
        app:layout_constraintEnd_toStartOf="@+id/register_username_text"
        app:layout_constraintTop_toTopOf="@+id/register_username_text" />

    <TextView
        android:id="@+id/userpsd_confirm"
        android:layout_width="74dp"
        android:layout_height="31dp"
        android:gravity="center"
        android:text="@string/confirm_password"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/register_psd_confirm"
        app:layout_constraintEnd_toStartOf="@+id/register_psd_confirm"
        app:layout_constraintTop_toTopOf="@+id/register_psd_confirm"
        app:layout_constraintVertical_bias="0.578" />

    <TextView
        android:id="@+id/userpsd"
        android:layout_width="54dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="@string/password"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/register_psd_text"
        app:layout_constraintEnd_toStartOf="@+id/register_psd_text"
        app:layout_constraintTop_toTopOf="@+id/register_psd_text"
        app:layout_constraintVertical_bias="0.466" />

    <Button
        android:id="@+id/register_reg"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:layout_marginTop="512dp"
        android:background="@drawable/shape_corner"
        android:text="@string/register"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/register_agreement"
        android:layout_width="319dp"
        android:layout_height="28dp"
        android:layout_marginTop="628dp"
        android:text="@string/agreement"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>