<?xml version="1.0" encoding="utf-8"?>
<!--这是底边栏-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D6D6D6"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/home_page_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_home_page_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:srcCompat="@drawable/earth" />

            <TextView
                android:id="@+id/nav_home_page_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_home_page_label"
                android:textColor="#152B93"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/creation_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_creation_icon"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:srcCompat="@drawable/lights_gray" />

            <TextView
                android:id="@+id/nav_creation_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_creation_label"
                android:textColor="#797979"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/social_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_social_icon"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:srcCompat="@drawable/social_gray" />

            <TextView
                android:id="@+id/nav_social_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_social_label"
                android:textColor="#797979"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_info_bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nav_my_info_icon"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:srcCompat="@drawable/myinfo_gray" />

            <TextView
                android:id="@+id/nav_my_info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_my_info_label"
                android:textColor="#797979"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>