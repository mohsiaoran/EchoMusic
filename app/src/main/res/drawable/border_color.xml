<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 搜索框需要一个黑色边框，所以新创建了一个 -->
    <stroke
        android:width="3px"
        android:color="#000000" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="500px"
        android:bottomRightRadius="500px"
        android:topLeftRadius="500px"
        android:topRightRadius="500px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="500dp"
        android:left="5dp"
        android:right="5dp"
        android:top="500dp" />

</shape>